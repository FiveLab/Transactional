{
    "name": "fivelab/transactional",
    "description": "Adds transactional layers to you application",
    "keywords": [ "transactional", "orm transactional", "amqp transactional" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "v.zhuk@fivelab.org"
        },

        {
            "name": "FiveLab Team",
            "email": "dev@fivelab.org",
            "homepage": "http://fivelab.org"
        }
    ],

    "require": {
        "php": "~7.4 | ~8.0"
    },

    "require-dev": {
        "ext-amqp": "*",
        "doctrine/orm": "~2.4",
        "phpunit/phpunit": "~9.5.0",
        "phpstan/phpstan": "~0.12.85",
        "escapestudios/symfony2-coding-standard": "~3.5.0"
    },

    "suggest": {
        "doctrine/orm": "For use DoctrineORM transactional layer."
    },

    "autoload": {
        "psr-4": { "FiveLab\\Component\\Transactional\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": {
            "FiveLab\\Component\\Transactional\\Tests\\": "tests/"
        }
    },

    "config": {
        "bin-dir": "./bin/"
    },

    "extra": {
        "thanks": {
            "name": "fivelab/transactional",
            "url": "https://github.com/FiveLab/Transactional"
        }
    }
}